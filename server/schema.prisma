datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id                       String    @id @default(cuid())
  firstName                String    @default("")
  lastName                 String    @default("")
  email                    String    @unique @default("")
  password                 String
  profilePicture_filesize  Int?
  profilePicture_extension String?
  profilePicture_width     Int?
  profilePicture_height    Int?
  profilePicture_mode      String?
  profilePicture_id        String?
  socialMediaURL           String    @default("")
  githubURL                String    @default("")
  isAdmin                  Boolean   @default(false)
  websiteURL               String    @default("")
  projects                 Project[] @relation("Project_user")
}

model Project {
  id              String  @id @default(cuid())
  title           String  @default("")
  image_filesize  Int?
  image_extension String?
  image_width     Int?
  image_height    Int?
  image_mode      String?
  image_id        String?
  description     String  @default("")
  githubURL       String  @default("")
  websiteURL      String  @default("")
  user            User?   @relation("Project_user", fields: [userId], references: [id])
  userId          String? @map("user")

  @@index([userId])
}